        <record id="stock_location_dossiers_compte" model="stock.location">
            <field name="name">Dossiers Compte</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_zone_numerisation"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Emplacement spécialisé pour les dossiers de compte</field>
        </record>

        <!-- Zone Dossiers Événement -->
        <record id="stock_location_dossiers_evenement" model="stock.location">
            <field name="name">Dossiers Événement</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_zone_numerisation"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Emplacement spécialisé pour les dossiers d'événement</field>
        </record>

        <!-- ========================================= -->
        <!-- EMPLACEMENTS VIRTUELS -->
        <!-- ========================================= -->

        <!-- Emplacement Virtuel - En Cours de Traitement -->
        <record id="stock_location_virtual_en_cours" model="stock.location">
            <field name="name">En Cours de Traitement</field>
            <field name="usage">transit</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Emplacement virtuel pour dossiers en cours de traitement</field>
        </record>

        <!-- Emplacement Virtuel - Livrés -->
        <record id="stock_location_virtual_livres" model="stock.location">
            <field name="name">Dossiers Livrés</field>
            <field name="usage">customer</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Emplacement virtuel pour dossiers livrés à CIH Bank</field>
        </record>

        <!-- Emplacement Virtuel - Erreurs -->
        <record id="stock_location_virtual_erreurs" model="stock.location">
            <field name="name">Dossiers en Erreur</field>
            <field name="usage">inventory</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="comment">Emplacement virtuel pour dossiers en erreur</field>
        </record>

    </data>
</odoo>

