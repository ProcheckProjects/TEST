<?xml version="10.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================= -->
        <!-- VUES POUR CARTON NUMÉRISATION -->
        <!-- ========================================= -->

        <!-- Vue Liste Cartons Numérisation -->
        <record id="view_carton_numerisation_tree" model="ir.ui.view">
            <field name="name">carton.numerisation.tree</field>
            <field name="model">carton.numerisation</field>
            <field name="arch" type="xml">
                <tree string="Cartons de Numérisation" decoration-success="state=='numerise'" decoration-warning="state=='en_cours'" decoration-info="state=='ouvert'" decoration-muted="state=='plein'">
                    <field name="numero_carton"/>
                    <field name="type_dossier"/>
                    <field name="capacite_max"/>
                    <field name="nombre_dossiers"/>
                    <field name="operateur_id"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire Carton Numérisation -->
        <record id="view_carton_numerisation_form" model="ir.ui.view">
            <field name="name">carton.numerisation.form</field>
            <field name="model">carton.numerisation</field>
            <field name="arch" type="xml">
                <form string="Carton de Numérisation">
                    <header>
                        <button name="action_terminer_carton" type="object" string="Terminer Carton" 
                                class="btn-success" attrs="{'invisible': ['|', ('state', 'not in', ['en_cours', 'plein']), ('nombre_dossiers', '=', 0)]}"/>
                        <button name="action_demarrer_numerisation" type="object" string="Démarrer Numérisation" 
                                class="btn-primary" attrs="{'invisible': [('state', '!=', 'termine')]}"/>
                        <button name="action_terminer_numerisation" type="object" string="Terminer Numérisation" 
                                class="btn-success" attrs="{'invisible': [('state', '!=', 'numerise')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="ouvert,en_cours,plein,termine,numerise"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_voir_dossiers_numerises" type="object" class="oe_stat_button" icon="fa-folder">
                                <field name="nombre_dossiers" widget="statinfo" string="Dossiers Numérisés"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="numero_carton" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group name="carton_info">
                                <field name="type_dossier"/>
                                <field name="capacite_max"/>
                                <field name="operateur_id" options="{'no_create': True}"/>
                            </group>
                            <group name="stats_info">
                                <field name="nombre_dossiers"/>
                                <field name="nombre_pieces_total"/>
                                <field name="duree_numerisation_totale" widget="float_time"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Dossiers du Carton" name="dossiers">
                                <field name="dossier_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="numero_dossier"/>
                                        <field name="radical_dossier"/>
                                        <field name="code_agence"/>
                                        <field name="nombre_pieces"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes et Observations" name="notes">
                                <group>
                                    <field name="notes" nolabel="1" placeholder="Notes sur ce carton..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Kanban Carton Numérisation -->
        <record id="view_carton_numerisation_kanban" model="ir.ui.view">
            <field name="name">carton.numerisation.kanban</field>
            <field name="model">carton.numerisation</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="numero_carton"/>
                    <field name="type_dossier"/>
                    <field name="nombre_dossiers"/>
                    <field name="operateur_id"/>
                    <field name="state"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="numero_carton"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <field name="state" widget="label_selection" options="{'classes': {'nouveau': 'default', 'en_cours': 'warning', 'termine': 'success'}}"/>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div>
                                            <i class="fa fa-folder"/> <field name="type_dossier"/> 
                                            (<field name="nombre_dossiers"/> dossiers)
                                        </div>
                                        <div>
                                            <i class="fa fa-user"/> <field name="operateur_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Graphique Carton Numérisation -->
        <record id="view_carton_numerisation_graph" model="ir.ui.view">
            <field name="name">carton.numerisation.graph</field>
            <field name="model">carton.numerisation</field>
            <field name="arch" type="xml">
                <graph string="Statistiques Cartons Numérisation" type="bar">
                    <field name="type_dossier" type="row"/>
                    <field name="nombre_dossiers" type="measure"/>
                    <field name="duree_numerisation_totale" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Vue Recherche Carton Numérisation -->
        <record id="view_carton_numerisation_search" model="ir.ui.view">
            <field name="name">carton.numerisation.search</field>
            <field name="model">carton.numerisation</field>
            <field name="arch" type="xml">
                <search string="Rechercher Cartons">
                    <field name="numero_carton"/>
                    <field name="type_dossier"/>
                    <field name="operateur_id"/>
                    <field name="state"/>
                    <filter name="nouveau" string="Nouveau" domain="[('state', '=', 'nouveau')]"/>
                    <filter name="en_cours" string="En Cours" domain="[('state', '=', 'en_cours')]"/>
                    <filter name="termine" string="Terminé" domain="[('state', '=', 'termine')]"/>
                    <group expand="0" string="Grouper par">
                        <filter name="group_type" string="Type de Dossier" context="{'group_by': 'type_dossier'}"/>
                        <filter name="group_operateur" string="Opérateur" context="{'group_by': 'operateur_id'}"/>
                        <filter name="group_state" string="État" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>

