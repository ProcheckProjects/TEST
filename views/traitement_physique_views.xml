<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================= -->
        <!-- VUES POUR TRAITEMENT PHYSIQUE -->
        <!-- ========================================= -->

        <!-- Vue Liste Traitements Physiques -->
        <record id="view_traitement_physique_tree" model="ir.ui.view">
            <field name="name">traitement.physique.tree</field>
            <field name="model">traitement.physique</field>
            <field name="arch" type="xml">
                <tree string="Traitements Physiques" decoration-success="state=='valide'" decoration-warning="state=='en_cours'" decoration-info="state=='pause'">
                    <field name="dossier_id"/>
                    <field name="agent_id"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="duree_traitement" widget="float_time"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire Traitement Physique -->
        <record id="view_traitement_physique_form" model="ir.ui.view">
            <field name="name">traitement.physique.form</field>
            <field name="model">traitement.physique</field>
            <field name="arch" type="xml">
                <form string="Traitement Physique">
                    <header>
                        <button name="action_mettre_en_pause" type="object" string="Mettre en Pause" 
                                class="btn-warning" attrs="{'invisible': [('state', '!=', 'en_cours')]}"/>
                        <button name="action_reprendre_traitement" type="object" string="Reprendre Traitement" 
                                class="btn-primary" attrs="{'invisible': [('state', '!=', 'pause')]}"/>
                        <button name="action_terminer_traitement" type="object" string="Terminer Traitement" 
                                class="btn-success" attrs="{'invisible': [('state', 'not in', ['en_cours', 'pause'])]}"/>
                        <button name="action_valider_traitement" type="object" string="Valider Traitement" 
                                class="btn-success" attrs="{'invisible': [('state', '!=', 'termine')]}"/>
                        <button name="action_reprendre_traitement_termine" type="object" string="Reprendre Traitement Terminé" 
                                class="btn-secondary" attrs="{'invisible': [('state', 'not in', ['termine', 'valide'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="en_cours,pause,termine,valide"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="dossier_id" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group name="traitement_info">
                                <field name="agent_id" options="{'no_create': True}"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="duree_traitement" widget="float_time"/>
                            </group>
                            <group name="dossier_details">
                                <field name="radical_dossier"/>
                                <field name="code_agence"/>
                                <field name="nombre_pieces"/>
                                <field name="type_dossier"/>
                            </group>
                        </group>

                        <group string="Observations">
                            <field name="observations" nolabel="1" placeholder="Observations sur le traitement physique..."/>
                        </group>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Kanban Traitement Physique -->
        <record id="view_traitement_physique_kanban" model="ir.ui.view">
            <field name="name">traitement.physique.kanban</field>
            <field name="model">traitement.physique</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="dossier_id"/>
                    <field name="agent_id"/>
                    <field name="state"/>
                    <field name="duree_traitement"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="dossier_id"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <field name="state" widget="label_selection" options="{'classes': {'en_cours': 'warning', 'pause': 'info', 'termine': 'success', 'valide': 'success'}}"/>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div>
                                            <i class="fa fa-user"/> <field name="agent_id"/>
                                        </div>
                                        <div t-if="record.duree_traitement.raw_value">
                                            <i class="fa fa-clock-o"/> <field name="duree_traitement" widget="float_time"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Graphique Traitement Physique -->
        <record id="view_traitement_physique_graph" model="ir.ui.view">
            <field name="name">traitement.physique.graph</field>
            <field name="model">traitement.physique</field>
            <field name="arch" type="xml">
                <graph string="Statistiques Traitement Physique" type="bar">
                    <field name="date_debut" type="row" interval="day"/>
                    <field name="duree_traitement" type="measure"/>
                    <field name="agent_id" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Vue Recherche Traitement Physique -->
        <record id="view_traitement_physique_search" model="ir.ui.view">
            <field name="name">traitement.physique.search</field>
            <field name="model">traitement.physique</field>
            <field name="arch" type="xml">
                <search string="Rechercher Traitements Physiques">
                    <field name="dossier_id"/>
                    <field name="agent_id"/>
                    <filter name="en_cours" string="En Cours" domain="[('state', '=', 'en_cours')]"/>
                    <filter name="pause" string="En Pause" domain="[('state', '=', 'pause')]"/>
                    <filter name="termine" string="Terminé" domain="[('state', '=', 'termine')]"/>
                    <filter name="valide" string="Validé" domain="[('state', '=', 'valide')]"/>           <group expand="0" string="Grouper par">
                        <filter name="group_agent" string="Agent" context="{'group_by': 'agent_id'}"/>
                        <filter name="group_state" string="État" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>

