<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================= -->
        <!-- VUES POUR LIVRAISON NUMÉRIQUE -->
        <!-- ========================================= -->

        <!-- Vue Liste Livraisons Numériques -->
        <record id="view_livraison_numerique_tree" model="ir.ui.view">
            <field name="name">livraison.numerique.tree</field>
            <field name="model">livraison.numerique</field>
            <field name="arch" type="xml">
                <tree string="Livraisons Numériques" decoration-success="state=='livre'" decoration-warning="state=='en_cours'" decoration-info="state=='preparation'" decoration-danger="state=='erreur'" decoration-muted="state=='confirme'">                    <field name="numero_livraison"/>
                    <field name="date_livraison"/>
                    <field name="archiviste_id"/>
                    <field name="nombre_dossiers"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire Livraison Numérique -->
        <record id="view_livraison_numerique_form" model="ir.ui.view">
            <field name="name">livraison.numerique.form</field>
            <field name="model">livraison.numerique</field>
            <field name="arch" type="xml">
                <form string="Livraison Numérique">
                    <header>
                        <button name="action_demarrer_preparation" type="object" string="Démarrer Préparation" 
                                class="btn-primary" attrs="{'invisible': [('state', '!=', 'preparation')]}"/>
                        <button name="action_effectuer_verifications" type="object" string="Effectuer Vérifications" 
                                class="btn-info" attrs="{'invisible': [('state', '!=', 'verification')]}"/>
                        <button name="action_valider_pour_livraison" type="object" string="Valider pour Livraison" 
                                class="btn-success" attrs="{'invisible': [('state', '!=', 'verification')]}"/>
                        <button name="action_effectuer_livraison" type="object" string="Effectuer Livraison" 
                                class="btn-success" attrs="{'invisible': [('state', '!=', 'pret')]}"/>
                        <button name="action_confirmer_reception" type="object" string="Confirmer Réception" 
                                class="btn-success" attrs="{'invisible': [('state', '!=', 'livre')]}"/>
                        <button name="action_signaler_erreur" type="object" string="Signaler Erreur" 
                                class="btn-danger" attrs="{'invisible': [('state', 'in', ['livre', 'confirme', 'erreur'])]}"/>
                        <button name="action_relancer_livraison" type="object" string="Relancer Livraison" 
                                class="btn-warning" attrs="{'invisible': [('state', '!=', 'erreur')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="preparation,verification,pret,en_cours,livre,confirme,erreur"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group name="livraison_info">
                                <field name="date_livraison"/>
                                <field name="archiviste_id" options="{'no_create': True}"/>
                                <field name="nombre_dossiers"/>
                            </group>
                            <group name="details_livraison">
                                <field name="banque_destination"/>
                                <field name="dossier_partage_securise"/>
                                <field name="date_envoi_reel"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Dossiers à Livrer" name="dossiers">
                                <field name="dossier_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="numero_dossier"/>
                                        <field name="radical_dossier"/>
                                        <field name="code_agence"/>
                                        <field name="state" widget="badge"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Observations" name="observations">
                                <group>
                                    <field name="observations" nolabel="1" placeholder="Observations sur la livraison..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Kanban Livraison Numérique -->
        <record id="view_livraison_numerique_kanban" model="ir.ui.view">
            <field name="name">livraison.numerique.kanban</field>
            <field name="model">livraison.numerique</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                     <field name="numero_livraison"/>
                    <field name="date_livraison"/>
                    <field name="archiviste_id"/>
                    <field name="state"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                 <field name="numero_livraison"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <field name="state" widget="label_selection" options="{'classes': {'brouillon': 'default', 'preparation': 'warning', 'livre': 'success'}}"/>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div>
                                            <i class="fa fa-calendar"/> <field name="date_livraison"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-user"/> <field name="archiviste_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Graphique Livraison Numérique -->
        <record id="view_livraison_numerique_graph" model="ir.ui.view">
            <field name="name">livraison.numerique.graph</field>
            <field name="model">livraison.numerique</field>
            <field name="arch" type="xml">
                <graph string="Statistiques Livraisons" type="bar">
                    <field name="date_livraison" type="row" interval="day"/>
                    <field name="nombre_dossiers" type="measure"/>
                    <field name="state" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Vue Recherche Livraison Numérique -->
        <record id="view_livraison_numerique_search" model="ir.ui.view">
            <field name="name">livraison.numerique.search</field>
            <field name="model">livraison.numerique</field>
            <field name="arch" type="xml">
                <search string="Rechercher Livraisons">
                     <field name="numero_livraison"/>
                    <field name="archiviste_id"/>
                    <field name="state"/>
                    <filter name="brouillon" string="Brouillon" domain="[('state', '=', 'brouillon')]"/>
                    <filter name="preparation" string="En Préparation" domain="[('state', '=', 'preparation')]"/>
                    <filter name="livre" string="Livré" domain="[('state', '=', 'livre')]"/>
                    <group expand="0" string="Grouper par">
                        <filter name="group_archiviste" string="Archiviste" context="{'group_by': 'archiviste_id'}"/>
                        <filter name="group_state" string="État" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>

